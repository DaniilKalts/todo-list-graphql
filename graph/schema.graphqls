scalar Time

type Todo {
  id: ID!
  name: String!
  description: String!
  done: Boolean!
  category: Category!
  images: [Image!]!
  createdAt: Time!
  updatedAt: Time!
  deletedAt: Time
}

type Category {
  id: ID!
  name: String!
  description: String!
  todos: [Todo!]!
  createdAt: Time!
  updatedAt: Time!
  deletedAt: Time
}

type Image {
  id: ID!
  url: String!
  createdAt: Time!
  updatedAt: Time!
  deletedAt: Time
}

type Query {
  todos: [Todo!]!
  todo(id: ID!): Todo
  categories: [Category!]!
  category(id: ID!): Category
}

type Mutation {
  createCategory(name: String!, description: String!): Category!
  createTodo(
    name: String!
    description: String!
    categoryID: ID!
  ): Todo!
  addImage(todoID: ID!, url: String!): Image!
  toggleTodoDone(id: ID!): Todo!
  deleteTodo(id: ID!): Boolean!
}
